{% extends 'profile_user/layout.html.twig' %}

{% block stylesheets %}
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    {{ encore_entry_link_tags('user') }}
    <link href="{{ 'style/footer.css' }}" rel="stylesheet">
    <link href="{{ 'style/nav.css' }}" rel="stylesheet">
{% endblock %}

{% block title %}Hello ProfileUserController!{% endblock %}



{% block main %}
    <div class="profile-block">
        <div class="panel text-center">
            <div class="user-heading">
                <h1>{{ user.name }}</h1>
                <p>{{ user.email }}</p>
                <p>Prix de la dernière commande :</p>
                {% for order in user.orders|slice(-1) %}
                <p>{{ order.priceTotal|e }}</p>
                {% endfor %}
            </div>
            <ul class="nav nav-pills nav-stacked">
                <li><a href="{{ path('profile_history') }}"><i class="fa fa-usd" aria-hidden="true"></i>Historique des commandes</a></li>
                <li><a href="{{ path('app_logout') }}"><i class="fa fa-sign-out"></i>Se déconnecter</a></li>
            </ul>
        </div>
    </div>
{% endblock %}

{% block javascipt %}
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
{% endblock %}
