{% extends 'caterer/layout.html.twig' %}
{% block stylesheets %}
    <link href="{{ 'style/footer.css' }}" rel="stylesheet">
    <link href="{{ 'style/nav.css' }}" rel="stylesheet">
    {{ encore_entry_link_tags('caterer') }}
{% endblock %}

{% block title %}Taste - Artisan Traiteur{% endblock %}

{% block headerTitle %}
    <div class="home-title">
        <h1>Artisan Traiteur</h1>
        <h2>Carte - Traiteur</h2>
    </div>
{% endblock %}

{% block main %}

    <div class="cocktail-caterer">
        <img src="/images/caterer/image--006.jpg" alt="place holder" width="50%">
        <div class="event">
        <h2>Un traiteur «SUR MESURE» basé à Tours</h2>
        <p class="text"> Nous vous garantissons des produits frais de qualité, régionaux, au maximum à circuit court
            et fait maisonpar nos soins à notre laboratoire de production, avec Savoir-faire et Passion.Toutes nos prestations
            s’adaptent à vos évènements: séminaire, repas de fin d'année, mariage, baptême,anniversaire, soirée entre amis... </p>
        </div>
    </div>

    <div class="entree-caterer">
        <div class="event">
        <h2>Nos prestations</h2>
        <p class="text"> Cocktail/buffet dinatoire,
            Repas chaud ou froid à l’assiette (apéritifs, entrées, plats, fromages, desserts: composition au choix),
            Repas buffet,
            Plateaux repas individuels,
            Livraison des produits de notre boutique restaurant par nos soins à partir de 10 personnes </p>
        </div>
        <img src="/images/caterer/IMG_20191221_193512_resized_20210202_034121314.jpg" alt="place holder" width="50%">
    </div>

    <div class="plate-caterer">
        <img src="/images/caterer/image--003.jpg" alt="place holder" width="50%">
        <div class="event">
        <h2>Formules</h2>
        <p class="text">Service ou par vos soins «livraison et prêt de matériels»,
            Installation salle/buffet/etc,
             Nettoyage,
            Location de matériels: tables/chaises/nappes/couverts/verres/barnum/location de salle  ou divers services.</p>
        </div>
    </div>

    <div class="container">
        <div class="row header">
            <h1>DEMANDE DE DEVIS</h1>
        </div>
        <div class="row body">
            {{ form_start(form) }}
                <div class="A">
                    {{ form_label(form.lastname) }}
                    {{ form_widget(form.lastname) }}
                </div>
                <div class="B">
                    {{ form_label(form.firstname) }}
                    {{ form_widget(form.firstname) }}
                </div>
                <div class="C">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                </div>
                <div class="D">
                    {{ form_label(form.number) }}
                    {{ form_widget(form.number) }}
                </div>
                <div class="E">
                    {{ form_label(form.budget) }}
                    {{ form_widget(form.budget) }}
                </div>
                <div class="F">
                    {{ form_label(form.guests) }}
                    {{ form_widget(form.guests) }}
                </div>
                <div class="G">
                    {{ form_widget(form.date) }}
                </div>
                <div class="H">
                    {{ form_label(form.location) }}
                    {{ form_widget(form.location) }}
                </div>
                <div class="border"></div>
                <div class="I">
                    <div class="labelI">{{ form_label(form.description) }}</div>
                    {{ form_widget(form.description) }}
                </div>
        </div>
                    <input class="btn btn-submit" type="submit" value="Submit" />
    </div>
                {{ form_end (form)}}
{% endblock %}

 {% block javascripts %}
    {{ encore_entry_script_tags('caterer') }}
 {% endblock %}