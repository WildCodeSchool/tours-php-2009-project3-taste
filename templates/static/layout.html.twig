{% extends 'base.html.twig' %}

{% block body %}
    {% block menu %} {% endblock %}
    <header>
        <div class="image-title">
            <nav class="nav">
                <a href="{{ path('carte') }}">Carte</a>
                <a href="{{ path('caterer') }}">Traiteur</a>
                <a href="{{ path('partners') }}">Partenaire</a>
                <a href="{{ path('index') }}"><img src = "{{ ('images/home logo.png') }}" alt="logo home" width="50" height="50"/></a>
                <a href="#">News</a>
                <a href="#">Contact</a>
                {% if app.user %}

                    <a href="{{ path('app_logout') }}">  {{ app.user.name }} </a>

                {% else %}

                    <a href="{{ path('app_login') }}"> Se connecter</a>

                {% endif %}
            </nav>
            {% block headerTitle %}{% endblock %}
        </div>
        <hr>
    </header>
    <main>
        {% block main %}{% endblock %}
    </main>
    <footer class="contenuFooter">
        <div class="bloc footerSommaire">
            <ul class="listPages">
                <li>
                    <iframe width="200" height="200"
                            src="https://www.openstreetmap.org/export/embed.html?bbox=0.6825135027793295%2C47.3942452046221%2C0.6854102885154135%2C47.39569413015929&amp;layer=transportmap&amp;marker=47.39496967237069%2C0.6839618956473714">
                    </iframe>
                </li>
            </ul>
        </div>
        <div class="bloc footerContact">
            <h3>Restons en Contact!</h3>
            <p>09 53 03 74 69</p>
            <p>55 rue du Commerce, Tours, 37000</p>
            <p>Lundi au Vendredi de 10h30 à 21h00</p>
        </div>
        <div class="bloc footerSociaux">
            <h3>Nos Réseaux</h3>
            <ul class="listSociaux">
                <li>
                    <a href="https://www.instagram.com/taste_restaurant37" target="_blank"><img src="../images/instagram.png" alt="icone réseaux sociaux" width="30" height="35"/></a>
                </li>
                <li>
                    <a href="https://www.facebook.com/Tasterestauranttours" target="_blank"><img src="../images/facebook.png" alt="icone réseaux sociaux" width="30" height="35"/></a>
                </li>
                <li>
                    <a href="{{ path('CGU') }}">- Conditions générales d'utilisation </a>
                </li>
                <li>
                    <a href="{{ path('FAQ') }}">- Foire aux questions </a>
                </li>
            </ul>
        </div>
    </footer>
{% endblock %}
